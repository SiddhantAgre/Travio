<% layout("layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        
        <div class="col-6 offset-3">
            <h1>Login</h1>
            <form action="/login" method="POST" class="needs-validation" novalidate>

        <div class="mb-3">
          <label class="form-label" for="username">Username: </label>
          <input
            class="form-control"
            type="text"
            placeholder="Enter a username"
            id="username"
            name="username"
            required
          />
          <div class="valid-feedback">Title entered!</div>
            <div class="invalid-feedback">Please enter valid credentials</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="password">Password: </label>
          <input
            class="form-control"
            type="password"
            placeholder="Enter a password"
            id="password"
            name="password"
            required
          />
          <div class="valid-feedback">Title entered!</div>
            <div class="invalid-feedback">Please enter valid credentials</div>
        </div>

        <button class="btn btn-success">
            Login
        </button>

            </form>
        </div>
    </div>
</body>
</html>